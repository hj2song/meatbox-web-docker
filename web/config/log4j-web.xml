<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
	<Appenders>
		<Console name="appender-console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss},%5p (%C{1}.%M) : %m%n"/>
		</Console>
		<RollingFile name ="appender-root"
		fileName="${sys:catalina.home}/logs/${sys:HOSTNAME}/web/root.log"
		filePattern="${sys:catalina.home}/logs/${sys:HOSTNAME}/web/root.log.%d{yyyy-MM-dd}"
		ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d{yyyy/MM/dd HH:mm:ss},%5p (%C{1}.%M) : %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>
		
		<RollingFile name ="appender-allat"
		fileName="${sys:catalina.home}/logs/${sys:HOSTNAME}/web/allat.log"
		filePattern="${sys:catalina.home}/logs/${sys:HOSTNAME}/web/allat.log.%d{yyyy-MM-dd}"
		ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d{yyyy/MM/dd HH:mm:ss},%5p (%C{1}.%M) : %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>
		
		<RollingFile name ="appender-nicepay"
		fileName="${sys:catalina.home}/logs/web/${sys:HOSTNAME}/nicepay.log"
		filePattern="${sys:catalina.home}/logs/${sys:HOSTNAME}/web/nicepay.log.%d{yyyy-MM-dd}"
		ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d{yyyy/MM/dd HH:mm:ss},%5p (%C{1}.%M) : %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>	
	
	</Appenders>
	<!-- root 로그 출력 -->
	<Loggers>
		<!-- 기본 레벨은 debug -->
		<Root level="debug">
			<appender-ref ref="appender-root" />
		</Root>
		<!-- 스프링 프레임워크에서 찍는건 level을 info로 설정 -->
		<!-- 올앳페이 로거 -->
		<logger name="AllatLogger" level="debug">
			<appender-ref ref="appender-allat"	/>
		</logger>
		<!-- 나이스페이 로거 -->
		<logger name="NicePayLogger" level="debug">
			<appender-ref ref="appender-nicepay"	/>
		</logger>
	
	</Loggers>
</Configuration>